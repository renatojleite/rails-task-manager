<h1>My tasks</h1>

<div>
<% @tasks.each do |task| %>
    <p><%= task.completed ? '[X]' : "[ ]" %> <%= link_to task.title, task_path(task.id) %> <%= link_to 'Delete', task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %></p>
<% end %>
</div>

<div>
  <%= link_to 'Create new task', tasks_new_path %>
</div>
